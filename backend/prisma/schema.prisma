// SQLite datasource
 datasource db {
   provider = "sqlite"
   url      = "file:./dev.db"
 }

// Generator
 generator client {
   provider = "prisma-client-js"
 }

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         Role
  courses      Course[]
}

enum Role {
  admin
  instructor
}

model Course {
  id           Int      @id @default(autoincrement())
  name         String
  instructor   User     @relation(fields: [instructorId], references: [id])
  instructorId Int
  sessions     Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  Int
  qrToken   String   @unique
  date      DateTime
  timeStart String
  timeEnd   String
  type      SessionType
  attendances Attendance[]
}

enum SessionType {
  entry
  exit
}

model Attendance {
  id        Int      @id @default(autoincrement())
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId Int
  name      String
  surname   String
  timestamp DateTime @default(now())
  ip        String
} 